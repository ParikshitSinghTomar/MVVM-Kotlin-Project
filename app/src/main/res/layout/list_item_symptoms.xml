<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rltListItemShipment"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewSymptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Symptoms" />

    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <Spinner
        android:id="@+id/spinnerTimes"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/spinnerDays" />

    <Spinner
        android:id="@+id/spinnerDays"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/textViewSymptoms" />

    <EditText
        android:id="@+id/editTextRemark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/spinnerTimes"
        android:layout_toStartOf="@+id/imageViewDelete"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:hint="Remark" />
</RelativeLayout>